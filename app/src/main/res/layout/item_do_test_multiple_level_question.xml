<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/question_holder"
    android:background="@color/colorPrimary"
    android:padding="5dp"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="Question 1: This is the content of the question 1, what do you want to know?"
        android:textColor="@color/textPrimary"
        android:id="@+id/question"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="10">
        <SeekBar
            android:scrollbarSize="10dp"
            android:layout_width="0dp"
            android:layout_weight="9"
            android:layout_height="wrap_content"
            android:maxHeight="15dp"
            android:max="7"
            android:progress="7"
            android:progressDrawable="@drawable/progressbar"
            android:thumb="@drawable/thumb"
            android:id="@+id/answer_seekbar"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="1"
            android:gravity="center"
            android:textSize="20sp"
            android:textColor="@color/textPrimary"
            android:id="@+id/value"/>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="This is the description of the level his is the description of the level his is the description of the level"
        android:textColor="@color/textPrimary"
        android:layout_margin="10dp"
        android:id="@+id/option_description"/>


</LinearLayout>